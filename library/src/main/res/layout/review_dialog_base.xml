<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/semi_trans"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="25dp">

        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@+id/semi_trans"
            android:id="@+id/dialog_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/feedback_body_layout"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="125dp">

                <TextView
                    android:id="@+id/review_title"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:gravity="center"
                    android:textSize="12sp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/review_description"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    tools:text="171, Straight Road, Cross Street"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="#FFF"
                    android:layout_marginTop="5dp"
                    android:id="@+id/review_questions"
                    tools:text="Are reservations required here?"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/review_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:elevation="5dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:layout_marginBottom="-20dp"
            android:src="@drawable/ic_thumbs_up_down_black"
            android:layout_above="@+id/dialog_body" />

    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <LinearLayout
            android:id="@+id/layoutActions"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="3"
            android:background="#FFF"
            >
            <LinearLayout
                android:id="@+id/postive_feedback_layout"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="20dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/reviewdialog_review_action_ripple"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/postive_feedback_icon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:tint="@color/sampleColor"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_awesome"
                    />
                <TextView
                    android:id="@+id/positive_feedback_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="AWESOME"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:textColor="#000"
                    android:layout_marginTop="5dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/negative_feedback_layout"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="20dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/reviewdialog_review_action_ripple"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/negative_feedback_icon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:tint="@color/sampleColor"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_negative"
                    />
                <TextView
                    android:id="@+id/negative_feedback_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="BAD"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:textColor="#000"
                    android:layout_marginTop="5dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/not_sure_feedback_layout"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="20dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/reviewdialog_review_action_ripple"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/not_sure_feedback_icon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:tint="@color/sampleColor"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_now_sure"
                    />
                <TextView
                    android:id="@+id/not_sure_feedback_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="WRITE"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:textColor="#000"
                    android:layout_marginTop="5dp"

                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/layoutConstructiveCriticism"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/etConstructiveCriticism"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <ImageButton
                android:id="@+id/btnConstructiveCriticism"
                android:layout_weight="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </FrameLayout>


</LinearLayout>