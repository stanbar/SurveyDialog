<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="FD_Light" parent="Theme.MaterialComponents.Light.Dialog.Alert" tools:ignore="PrivateResource">
        <item name="android:windowMinWidthMajor">@dimen/abc_dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@dimen/abc_dialog_min_width_minor</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:actionModeBackground">@color/primary_material_dark</item>
        <item name="android:actionModeCloseDrawable">@drawable/fd_nav_back</item>
        <item name="android:windowNoTitle">true</item>

        <item name="android:windowAnimationStyle">@style/FD_WindowAnimation</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="FD_Dark" parent="Theme.MaterialComponents.Dialog.Alert" tools:ignore="PrivateResource">
        <item name="android:windowMinWidthMajor">@dimen/abc_dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@dimen/abc_dialog_min_width_minor</item>

        <item name="android:actionModeBackground">@color/primary_material_dark</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:actionModeCloseDrawable">@drawable/fd_nav_back</item>

        <item name="android:windowAnimationStyle">@style/FD_WindowAnimation</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="FD_WindowAnimation">
        <item name="android:windowEnterAnimation">@anim/popup_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_exit</item>
    </style>
</resources>